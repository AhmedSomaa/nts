{
  "name": "nts",
  "version": "1.0.0",
  "description": "A layered architecture typescript node.js boilerplate.",
  "main": "index.ts",
  "scripts": {
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "dev": "nodemon",
    "format": "prettier --config ./.prettierrc src/**/*.ts --write",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prebuild": "npm run lint:fix &&  npm run format",
    "build": "rimraf ./dist && tsc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-and-fix && npm run format"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AhmedSomaa/nts.git"
  },
  "keywords": [
    "tyepscript",
    "node"
  ],
  "author": "Ahmed Ismail Abo Kahf <ahmedsomaa@aucegypt.edu>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AhmedSomaa/nts/issues"
  },
  "homepage": "https://github.com/AhmedSomaa/nts#readme",
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.9",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "eslint-config-airbnb-typescript-prettier": "^4.1.0"
  }
}
